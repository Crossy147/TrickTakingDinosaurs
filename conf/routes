# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST	/sessions		    controllers.Application.signin()
GET	/tables			    controllers.TableLobby.list()
POST	/tables			    controllers.TableLobby.create()

GET	/tables/:id/ws			    controllers.TableLobby.join(id: String)

# This is probably just temporary solution to a bigger problem that we
# will encounter soon, when showing working GUI will be not sufficient.
GET     /game/deal                  controllers.Game.deal()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
